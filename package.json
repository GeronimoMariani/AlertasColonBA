{
  "name": "alertas-colon-ba",
  "version": "1.0.0",
  "description": "Sistema de alertas para bomberos de Colón, Buenos Aires.",
  "main": "main.js",
  "author": "Cuartel de Bomberos Voluntarios de Colón BA",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon server.js",
    "server": "node server.js",
    "build": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.3.4",
    "express": "^4.19.2",
    "firebase-admin": "^12.6.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "electron": "^39.1.2",
    "electron-builder": "^25.0.0",
    "nodemon": "^3.1.0"
  },
  "build": {
    "appId": "com.alertascolon.ba",
    "productName": "Alertas Colon BA",
    "publish": [
      {
        "provider": "github",
        "owner": "GeronimoMariani",
        "repo": "AlertasColonBA"
      }
    ],
    "files": [
      "main.js",
      "server.js",
      "public/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Alertas Colon BA"
    }
  }
}
